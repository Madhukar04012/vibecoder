# Environment Variables for VibeCober
# Copy to .env and fill in your values

# Database (Railway will inject this automatically)
DATABASE_URL=postgresql://user:password@host:5432/vibecober

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# NVIDIA NIM API — Kimi K2 Thinking
# Get key at: https://build.nvidia.com/
# Enable moonshotai/kimi-k2-thinking in your account at build.nvidia.com/explore/discover
NIM_API_KEY=nvapi-your-key-here
NIM_MODEL=moonshotai/kimi-k2-thinking
NIM_CODER_MODEL=moonshotai/kimi-k2-thinking
NVIDIA_API_KEY=nvapi-your-key-here

# Kimi K2 Thinking has built-in chain-of-thought reasoning (reasoning_content field)
NIM_ENABLE_THINKING=true

# Role-bound model routing overrides (optional)
TEAM_LEAD_MODEL=moonshotai/kimi-k2-thinking
BACKEND_ENGINEER_MODEL=moonshotai/kimi-k2-thinking
FRONTEND_ENGINEER_MODEL=moonshotai/kimi-k2-thinking
DATABASE_ENGINEER_MODEL=moonshotai/kimi-k2-thinking
QA_ENGINEER_MODEL=moonshotai/kimi-k2-thinking

# Phase-1 DAG worker queue backend: memory | redis
AGENT_QUEUE_BACKEND=memory
# REDIS_URL=redis://localhost:6379/0

# Backend — Anthropic API for secure agent chat proxy
# Get key at: https://console.anthropic.com/
# Note: This is now a BACKEND variable (no longer VITE_)
ANTHROPIC_API_KEY=

# Environment
ENV=production

# CORS (REQUIRED IN PRODUCTION)
# Development: Defaults to localhost:5173,3000
# Production: Set explicit origins (comma-separated)
# CORS_ORIGINS=https://app.example.com,https://www.example.com

# Unified pipeline governance
TEAM_LEAD_LLM_ROUTING=true
FREE_DAILY_CAP_USD=1.0
PRO_DAILY_CAP_USD=25.0

# Artifact persistence backend: local | s3
ARTIFACT_BACKEND=local
# ARTIFACT_S3_BUCKET=your-bucket
# ARTIFACT_S3_PREFIX=vibecober

LLM_TIMEOUT_SECONDS=180

